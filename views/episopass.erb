<script>
var data = JSON.parse('<%= @json %>');
var questions = data['questions'];
var seed = data['seed'];

for(i=0;i<questions.length;i++){
  var div = $("<div>");

  var qdiv = $("<div>");
  qdiv.attr('id','imageurl' + String(i));
  //qdiv.css('background-color','white');
