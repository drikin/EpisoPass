  //qdiv.css('padding','1');
  //qdiv.css('margin','0 0 2 2');
  //qdiv.css('vertical-align','middle');
  qdiv.text(questions[i][0]);
  qdiv.addClass('question');
  div.append(qdiv);

  var img = $("<img>");
  img.attr('src',"http://gyazo.com/91046da67ab2e43cc4e6456e93c09cd1.png");
  img.css('height','100');
  img.css('float','left');
  img.css('padding',"2");
  img.attr('id',"image" + String(i));
  div.append(img);

  var div2 = $("<div>");
  div2.css('float','left');
  div2.css('padding','0');
  div2.attr('id','ansdiv' + String(i));
  var answers = questions[i][1];
  for(j=0;j<answers.length-1;j++){
    // function answerspan(i,j){
    var adiv = $("<div>");
    adiv.attr('id','a' + String(i) + String(j));
    adiv.css('font-size','9pt');
    adiv.css('font-family','sans-serif');
    adiv.css('width','400');
    adiv.css('border','solid');
    adiv.css('border-width','1px');
    adiv.css('padding','1');
    adiv.css('margin','0 0 2 2');
    adiv.css('vertical-align','middle');
    adiv.text(answers[j]);
    div2.append(adiv);
  }
  div.append(div2);

  var br = $('<br>');
  br.attr('clear','all');
  div.append(br);

  $("#main").append(div);
}

