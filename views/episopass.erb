<script>
var json = '<%= @json %>';
var name = '<%= @name %>';
var data = JSON.parse(json);
var qas = data['qas'];
var seed = '<%= @seed %>';

var answer = [];

var answerelements = [];

$('#seed').keyup(function(e){
  //if(e.keyCode == 13){
